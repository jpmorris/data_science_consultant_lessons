{ // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Convert MD to PPTX and Open",
            "type": "shell",
            "command": "pandoc '${file}' --resource-path='${fileDirname}' -o '${fileDirname}/${fileBasenameNoExtension}.pptx' --reference-doc '${fileDirname}/template.pptx' && libreoffice --impress '${fileDirname}/${fileBasenameNoExtension}.pptx'",
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}